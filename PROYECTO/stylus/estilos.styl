@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181

a 
    text-decoration none

body
    font-size 16px
    font-family: 'Varela Round', sans-serif;
    
figure
    margin 0
//buttons

.border-bottom
    border-bottom 1px solid gris_claro
.button-menu
    left .5em
    margin-top -10px
    position absolute
    top 50%
// oocss clases
.author
    color gris_claro
.container
    font-size 0
    padding 1.4rem
    text-align center
    
.header
    height 3.5em
    //a 
      //  display none
    .title
        font-size 1.1em
        line-height 3.5em
        margin 0
        text-align center
.menu
    display none
.name
    color gris_oscuro
    
.relative
    position relative

.song
    display inline-block
    font-size 1rem
    margin-right 1rem
    margin-bottom 1rem
    text-align left
    width 8rem
    &:nth-child(even)
        margin-right 0
    p
        margin 0.5em 0
